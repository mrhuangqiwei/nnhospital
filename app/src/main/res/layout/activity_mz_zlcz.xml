<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qiwei.hospital.ui.MzZlczActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/re_mzbl_chx"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/common_re_ly"
            >

            <TextView
                android:id="@+id/mzfy_mzbl_sf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:text="@string/mzfy_tv_ghxh"

                />

            <EditText
                android:id="@+id/mzbl_tv_brrygh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"

                android:layout_marginBottom="1dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/mzfy_mzbl_sf"
                android:layout_toLeftOf="@+id/mzbl_btn_ghxh"
                />
            <ImageButton
                android:id="@+id/mzbl_btn_ghxh"
                android:layout_width="40dp"
                android:layout_marginRight="20dp"
                android:layout_height="30dp"
                android:src="@mipmap/img_chaxun"
                android:layout_alignParentRight="true"
                android:background="@drawable/onclick_zyff_img"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true" />
        </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_mzcz_mx"
        android:background="@drawable/common_re_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_mzzlcz_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:textColor="@color/dodgerblue"
            android:text="@string/tv_mzzlcz_title"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_mzzlcz_ys"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/mzfy_tv_ghys"

                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@+id/tv_mzzlcz_sqys"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/tv_mzzlcz_sqys"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:textSize="15sp"
                    android:text="胡义正"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_mzzlcz_ys"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_mzzlcz_ks"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/mzbl_tv_gh"

                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@+id/tv_mzzlcz_jzks"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/tv_mzzlcz_jzks"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:textSize="15sp"
                    android:text="内一科"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_mzzlcz_ks"
                    />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_mzzlcz_xm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/zyfy_tv_br"

                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@+id/tv_mzzlcz_brxm"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/tv_mzzlcz_brxm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:textSize="15sp"
                    android:text="胡义正"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_mzzlcz_xm"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_mzzlcz_sj"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/mzfy_tv_jzrq"

                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@+id/tv_mzzlcz_sqsj"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/tv_mzzlcz_sqsj"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:textSize="15sp"
                    android:text="2016/3/23"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_mzzlcz_sj"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="3"
                android:id="@+id/tv_mzzlcz_sqxm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:text="@string/tv_mzzlcz_sqxm" />
            <TextView
                android:layout_weight="2"
                android:id="@+id/tv_mzzlcz_sqsl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:text="@string/tv_mzzlcz_sqsl" />

        <TextView
            android:layout_weight="2"
            android:id="@+id/tv_mzzlcz_dj"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="@string/tv_mzzlcz_dj" />
            <TextView
                android:layout_weight="2"
                android:id="@+id/tv_mzzlcz_je"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:text="@string/tv_mzzlcz_je" />
    </LinearLayout>
        <ListView
             android:id="@+id/list_mzzl_mx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
