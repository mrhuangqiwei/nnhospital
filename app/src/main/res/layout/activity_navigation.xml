<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qiwei.hospital.ui.NavigationActivity">
    <include
        android:id="@+id/navigation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        layout="@layout/include_title"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/id_ll_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/id_yy_img"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="45dp"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                     >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/id_tv_navigation_intrduce"
                            android:layout_width="100dp"
                            android:textSize="17sp"
                            android:text="@string/naviation_location"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/id_tv_navigation_location"
                            android:layout_width="wrap_content"
                            android:text="@string/naviation_location1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/id_tv_navigation_intrduce" />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/id_tv_navigation_intrduce"
                            android:id="@+id/id_tv_navigation_ph"
                            android:layout_width="100dp"
                            android:textSize="17sp"
                            android:text="@string/naviation_ph"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:phoneNumber="true"
                            android:id="@+id/id_tv_navigation_phone"
                            android:layout_width="wrap_content"
                            android:text="@string/naviation_phone"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/title_blue"
                            android:layout_alignStart="@+id/id_tv_navigation_location" />
                    </RelativeLayout>
<LinearLayout
     android:layout_marginTop="20dp"
    android:id="@+id/id_ll_navagation_map"
    android:layout_width="match_parent"
      android:background="#FFE4C4"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:text="@string/naviation_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="5dp"/>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:id="@+id/id_ll_navagation_hos"
                        android:layout_width="match_parent"
                        android:background="#FFE4C4"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/naviation_hospital"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>
