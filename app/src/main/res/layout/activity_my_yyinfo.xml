<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    android:background="@color/tan"
    tools:context="com.qiwei.hospital.ui.MyYYInfoActivity">
    <RelativeLayout
        android:id="@+id/uc_center_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FF8746"

        >
        <ImageButton
            android:paddingLeft="5dp"
            android:id="@+id/img_uc_center_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/onclick_land_back"
            android:src="@mipmap/uc_land_back"/>
        <TextView

            android:id="@+id/tv_uc_center_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/tv_uc_center_yue"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_margin="16dp"
            android:id="@+id/ll_myyyinfo_list"
            android:background="@drawable/common_re_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="@string/tv_myyyinfo_title"
                android:id="@+id/tv_myyyinfo_title"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
       <ListView
           android:layout_margin="2dp"
    android:id="@+id/list_myyyinfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</ListView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
