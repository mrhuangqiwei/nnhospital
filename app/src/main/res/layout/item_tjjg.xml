          android:textColor="@color/color_4da1ff"
          android:textSize="18sp"
          android:layout_toRightOf="@+id/tjgl_ksmc"
          android:id="@+id/tjgl_zhmc"
          android:layout_width="150dp"
          android:layout_height="wrap_content"/>
