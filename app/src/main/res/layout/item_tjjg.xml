          android:textColor="@color/color_4da1ff"
          android:textSize="18sp"
          android:layout_toRightOf="@+id/tjgl_zhmc"
          android:id="@+id/tjgl_jcys"
          android:layout_width="80dp"
          android:layout_height="wrap_content"/>
      <TextView
          android:textColor="@color/color_4da1ff"
          android:textSize="18sp"
          android:layout_toRightOf="@+id/tjgl_jcys"
          android:id="@+id/tjgl_tjysxm"
          android:layout_width="53dp"
          android:layout_height="wrap_content"/>
