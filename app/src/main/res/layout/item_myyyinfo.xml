<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:text="@string/tv_myyyinfo_hzxm"
            />
        <TextView
            android:id="@+id/tv_item_myyyinfo_brxm"
            android:gravity="center_vertical"
            android:textColor="@color/mblue"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="张三丰"
            />
        <TextView
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:text="@string/tv_Yyyd_title"
            />
        <TextView
            android:id="@+id/item_tv_myyinfo_ys"
            android:gravity="center_vertical"
            android:textColor="@color/mblue"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="胡义正"
            />
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/id_tv_yyjzrq"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/tv_yygh_yy_jzrq"
        android:gravity="center_vertical"
      />
    <TextView
        android:gravity="center_vertical"
        android:textColor="@color/mblue"
        android:layout_marginLeft="20dp"
        android:text="2016-4-22"
        android:id="@+id/tv_item_yyinfo_jzrq"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/id_tv_yyjzrq"
        />
    <TextView
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/red"
        android:text="@string/tv_myyyinfo_click"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</RelativeLayout>
</LinearLayout>
