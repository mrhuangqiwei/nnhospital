<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:background="@drawable/common_re_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_mzxy_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:textColor="@color/dodgerblue"
        android:text="@string/tv_mzxy_title"
        android:layout_gravity="center"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="@string/mzzycf_tv_zd"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_xycf_title_lczd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="@string/mzzycf_tv_zd"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="@string/tv_xycf_fb"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_xycf_title_fb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="@string/tv_xycf_fb"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ListView
        android:id="@+id/list_xycf_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
        </LinearLayout>
</LinearLayout>
