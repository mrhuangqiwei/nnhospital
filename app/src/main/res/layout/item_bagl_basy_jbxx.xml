            <TextView
                style="@style/commonTextViewBlue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/bagl_basy_zyh"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>
