<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/homepage_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FF8746"


        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/uc_land_in"
            android:textSize="20sp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <ImageButton
            android:id="@+id/img_uc_land_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/uc_land_back"
             android:layout_marginLeft="5dp"
            android:background="#FF8746"
            />


  </RelativeLayout>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="50dp">
    <ImageView
        android:id="@+id/img_uc_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_register3"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"

        />
< EditText
    android:id="@+id/edt_uc_land_user"
    android:layout_toRightOf="@+id/img_uc_user"
    android:layout_marginLeft="10dp"
    android:layout_centerHorizontal="true"
    android:hint="@string/uc_land_user_prompt"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/img_uc_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_psw"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"

            />
        < EditText
            android:id="@+id/edt_uc_land_pass"
            android:layout_toRightOf="@+id/img_uc_pass"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:hint="@string/uc_land_password_prompt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:password="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <ImageView
            android:id="@+id/img_uc_land_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_uc_line"
            android:layout_centerInParent="true"
            />
        <TextView
        android:layout_toLeftOf="@id/img_uc_land_line"
        android:text="@string/uc_land_password_forget"
        android:id="@+id/tv_uc_forget_pws"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"/>
        <TextView
            android:layout_toRightOf="@id/img_uc_land_line"
            android:text="@string/uc_land_new_user"
            android:id="@+id/tv_uc_new_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"/>
    </RelativeLayout>
<RelativeLayout
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/onclick_landing"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:text="@string/uc_land_in"
        />
</RelativeLayout>



</LinearLayout>



</LinearLayout>
